{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "mdfind-node": ["./src/index.ts"],
      "mdfind-node/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "examples/**/*", "*.config.ts"],
  "exclude": ["node_modules", "dist"]
}
