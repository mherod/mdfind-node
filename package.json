{
  "name": "mdfind-node",
  "version": "1.0.0",
  "description": "Node.js wrapper for macOS mdfind command",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "example": "tsx examples/basic.ts",
    "example:live": "tsx examples/live-search.ts",
    "example:advanced": "tsx examples/advanced.ts",
    "example:metadata": "tsx examples/metadata.ts",
    "example:query": "tsx examples/query-builder.ts",
    "example:batch": "tsx examples/batch.ts",
    "example:extended": "tsx examples/extended-metadata.ts",
    "lint": "eslint \"src/**/*.ts\" \"examples/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"examples/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"examples/**/*.ts\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mherod/mdfind-node.git"
  },
  "bugs": {
    "url": "https://github.com/mherod/mdfind-node/issues"
  },
  "homepage": "https://github.com/mherod/mdfind-node#readme",
  "keywords": [
    "mdfind",
    "macos",
    "spotlight"
  ],
  "author": "Matthew Herod",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "tsx": "^4.6.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
